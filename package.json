{
    "name": "nvl-maker",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@typescript-eslint/parser": "^4.22.1",
        "commitizen": "^4.2.3",
        "conventional-changelog": "^3.1.24",
        "conventional-changelog-cli": "^2.1.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "lerna": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "scripts": {
        "postinstall": "yarn lerna bootstrap --npm-client yarn --use-workspaces",
        "clean": "yarn workspaces run clean && lerna clean -y",
        "build": "yarn lerna run --stream --sort build",
        "commit": "yarn commit:pre && git-cz",
        "commit:pre": "yarn lint:fix",
        "lint": "yarn eslint \"**/*.{js,ts,tsx}\"",
        "lint:fix": "yarn lint --fix"
    }
}
