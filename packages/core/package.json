{
    "name": "@nvl-maker/core",
    "version": "0.0.1",
    "description": "Just another toolkit for japanese-style ADV, VN or Galgame development.",
    "repository": "git@github.com:cocoloring/nvl-maker.git",
    "keywords": [
        "javascript",
        "typescript",
        "Visual Novel",
        "game",
        "3d",
        "2d",
        "webgl",
        "webgl2",
        "canvas",
        "html5"
    ],
    "author": "cocoloring <cocoloring@outlook.com>",
    "license": "MIT",
    "main": "build/main.js",
    "types": "build/main.d.ts",
    "scripts": {
        "build": "yarn run-s build:*",
        "build:ts": "yarn tsc -p ./tsconfig.json",
        "dev": "yarn yarn run-p dev:*",
        "dev:ts": "yarn tsc -p ./tsconfig.json -w",
        "clean": "yarn run-p clean:*",
        "clean:node": "yarn rimraf node_modules",
        "clean:build": "yarn rimraf build tsconfig.tsbuildinfo"
    },
    "dependencies": {
        "@nvl-maker/utils": "^0.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@types/react": "^17.0.19",
        "@types/react-dom": "^17.0.9"
    }
}
