{
    "name": "@nvl-maker/core",
    "version": "0.0.1",
    "description": "Just another toolkit for japanese-style ADV, VN or Galgame development.",
    "repository": "git@github.com:cocoloring/nvl-maker.git",
    "keywords": [
        "javascript",
        "typescript",
        "Visual Novel",
        "game",
        "3d",
        "2d",
        "webgl",
        "webgl2",
        "canvas",
        "html5"
    ],
    "author": "cocoloring <cocoloring@outlook.com>",
    "license": "MIT",
    "main": "build/main.js",
    "types": "build/main.d.ts",
    "scripts": {
        "build": "run-s build:*",
        "build:ts": "tsc -p ./tsconfig.json",
        "dev": "run-p dev:*",
        "dev:ts": "tsc -p ./tsconfig.json -w",
        "clean": "run-p clean:*",
        "clean:node": "rimraf node_modules",
        "clean:build": "rimraf build tsconfig.tsbuildinfo"
    },
    "dependencies": {
        "@nvl-maker/utils": "workspace:^0.0.1",
        "@react-three/fiber": "^7.0.6",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "three": "^0.132.2"
    },
    "devDependencies": {
        "@types/react": "^17.0.19",
        "@types/react-dom": "^17.0.9",
        "@types/three": "^0.131.0"
    }
}